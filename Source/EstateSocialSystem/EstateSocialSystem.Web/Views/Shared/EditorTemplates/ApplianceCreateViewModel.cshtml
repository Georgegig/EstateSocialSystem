@model EstateSocialSystem.Web.Models.ApplianceCreateViewModel

@using (Html.BeginForm("Create", "Appliance", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new appliance.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(a => a.Name, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(a => a.Name, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.Type, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(a => a.Type, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.Power, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(a => a.Power, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.Input, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(a => a.Input, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.Output, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(a => a.Output, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Create" />
        </div>
    </div>
}
