@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Estate Social System</h1>
    <p class="lead">Create an account and register your estates.</p>
</div>

<div class="row">
    <div class="col-md-4">
        @if (User.Identity.IsAuthenticated)
        {
            <h2>Estates</h2>
            <div>
                @foreach (var estate in ViewBag.Estates)
                {
                    <div>
                        @estate.Name
                    </div>
                }
            </div>
            <h2>Appliances</h2>
            <div>
                @foreach (var appliance in ViewBag.Appliances)
                {
                    <div>
                        @appliance.Name
                    </div>
                }
            </div>
        }
    </div>
</div>