@model EstateSocialSystem.Web.Models.EstatePersonalListViewModel
@{
    ViewBag.Title = "Personal";
}

<div class="row">
    <div class="col-md-12">
        <div class="row">
            <!--Display controller-->
            <div class="col-md-12">
                TODO
            </div>
            <!--Content-->
            <div class="col-md-12">
                <div class="text-center"><h1>Your Estates</h1></div>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Address</th>
                            <th>Size</th>
                            <th>Created on</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var estate in Model.Estates)
                        {
                            <tr>
                                <td><a href="/Estate/Display/@estate.Id">@estate.Name</a></td>
                                <td>@estate.Address</td>
                                <td>@estate.Size</td>
                                <td>@estate.CreatedOn</td>
                                <td class="row">
                                    <a href="/Estate/Update/@estate.Id" class="col-md-4 text-center">
                                        <div class="btn-warning">
                                            Update
                                        </div>
                                    </a>
                                    <a href="/Estate/Delete/@estate.Id" class="col-md-4 text-center">
                                        <div class="btn-danger">
                                            Delete
                                        </div>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="col-md-12 text-center">
                <nav>
                    <ul class="pagination">
                        @if (Model.CurrentPage > 1)
                        {
                            <li>
                                <a href="/Estate/Personal/@(Model.CurrentPage - 1)" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                        }
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            var className = string.Empty;

                            if (Model.CurrentPage == i)
                            {
                                className = "active";
                            }

                            <li class="@className"><a href="/Estate/Personal/@i">@i</a></li>
                        }
                        @if (Model.CurrentPage < Model.TotalPages)
                        {
                            <li>
                                <a href="/Estate/Personal/@(Model.CurrentPage + 1)" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>